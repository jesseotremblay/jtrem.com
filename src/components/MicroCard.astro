---
import Datetime from "./Datetime";
import type { CollectionEntry } from "astro:content";
import { render } from "astro:content";

export interface Props {
  post: CollectionEntry<"micro">;
  showContent?: boolean;
}

const { post, showContent = true } = Astro.props;
const { pubDatetime, modDatetime } = post.data;
const { Content } = await render(post);
---

<li class="my-6 h-entry micro-card bg-skin-card/20 rounded-lg">
  <div class="flex items-center gap-3 mb-3">
    <Datetime 
      pubDatetime={pubDatetime} 
      modDatetime={modDatetime}
      size="sm"
      className="dt-published"
    />
  </div>
  
  {showContent && (
    <div class="micro-content e-content prose max-w-none text-skin-base">
      <Content />
    </div>
  )}
</li>

<style>
  .micro-card {
    @apply pb-6 last:pb-0;
  }
  
  .micro-content :global(p:first-child) {
    @apply mt-0;
  }
  
  .micro-content :global(p:last-child) {
    @apply mb-0;
  }
  
  .micro-content :global(a) {
    @apply text-skin-accent hover:underline;
  }
</style>